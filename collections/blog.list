
{.section categoryFilter}
  <p class="filtered-by">Filtered by Category: {@|safe}</p>
{.end}

{.section tagFilter}
  <p class="filtered-by">Filtered by Tag: {@|safe}</p>
{.end}

{.if authorFilter}
  <p class="filtered-by">Filtered by Author: {author.displayName}</p>
{.end}

<div class="container">
  {.section pagination}
    {.if prevPage}
      <h1>I am the following pages</h1>
    {.or}
      <h1>I am the first page</h1>
    {.end}
  {.end}
  <div class="row no-gutters">
    {.repeated section items}
      {.main-image?}
      <div class="col-md-4 col-sm-12">
        <div class="img-wrap">
          <img {@|image-meta} />
          <div class="hilight">
            <p>{title}</p>
          </div>
        </div>
      </div>
      {.or}
      <div class="col-md-4 col-sm-12">
        <div class="img-wrap">
          <img src="http://clipart-library.com/img/1791739.jpg" />
          <div class="hilight">
            <p>{title}</p>
          </div>
        </div>
      </div>
      {.end}
    {.end}
  </div>
</div>

<!-- pagination -->
{.if pagination}
  <nav class="blog-list-pagination">

    <!-- newer page -->
    {.if pagination.prevPage}
      <a href="{pagination.prevPageUrl}">Newer</a>
    {.or}
      <a class="disabled">Newer</a>
    {.end}

    <!-- older page -->
    {.if pagination.nextPage}
      <a href="{pagination.nextPageUrl}">Older</a>
    {.or}
      <a class="disabled">Older</a>
    {.end}

  </nav>
{.end}
