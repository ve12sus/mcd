
{.section categoryFilter}
  <p class="filtered-by">Filtered by Category: {@|safe}</p>
{.end}

{.section tagFilter}
  <p class="filtered-by">Filtered by Tag: {@|safe}</p>
{.end}

{.if authorFilter}
  <p class="filtered-by">Filtered by Author: {author.displayName}</p>
{.end}

<div class="row">
<squarespace:query collection="new-blog" featured="true" limit="1">

  <div class="eight columns">
    {.repeated section items}
    <div class="featured-post">
      {.main-image?}<img {@|image-meta} />{.end}
      <h2>{title}</h2>
    </div>
    {.end}
  </div>

</squarespace:query>

<squarespace:query collection="new-blog" featured="false" limit="1">

  <div class="four columns">
    {.repeated section items}
    <div class="featured-post">
      {.main-image?}<img {@|image-meta} />{.end}
      <h2>{title}</h2>
    </div>
    {.end}
  </div>

</squarespace:query>
</div>
<!-- pagination -->
{.if pagination}
  <nav class="blog-list-pagination">

    <!-- newer page -->
    {.if pagination.prevPage}
      <a href="{pagination.prevPageUrl}">Newer</a>
    {.or}
      <a class="disabled">Newer</a>
    {.end}

    <!-- older page -->
    {.if pagination.nextPage}
      <a href="{pagination.nextPageUrl}">Older</a>
    {.or}
      <a class="disabled">Older</a>
    {.end}

  </nav>
{.end}
