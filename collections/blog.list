
{.section categoryFilter}
  <p class="filtered-by">Filtered by Category: {@|safe}</p>
{.end}

{.section tagFilter}
  <p class="filtered-by">Filtered by Tag: {@|safe}</p>
{.end}

{.if authorFilter}
  <p class="filtered-by">Filtered by Author: {author.displayName}</p>
{.end}

<div class="container-fluid">
  <div id="category-header">
    <img class="d-block w-100" src="http://via.placeholder.com/1440x400">
    <div class="category-overlay">
      <div class="container">
        <div class="category text-center">
          <h1>NEWS</h1>
          <p>Local stories, promotions, and sponsorships</p>
          <div class="container category-select">
            <div class="row">
              <div class="col">
                <div class="select-wrapper">
                  <h3>ALL</h3>
                </div>
              </div>
              <div class="col">
                <div class="select-wrapper">
                  <h3>ALL</h3>
                </div>
              </div>
              <div class="col">
                <div class="select-wrapper">
                  <h3>ALL</h3>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="category-content">
    <div class="container">
      <div class="row">
        <div class="col-8">
          <img class="img-fluid" src="http://via.placeholder.com/618x413">
        </div>
        <div class="col-4">
          <p>Special Tribute to 9/11 McDonad's Owner Opreator Hero Lloyd Frazier
            at Annual SBU's "give Kids a Smile" Day</p>
          <p>The 5th annual "Give Kids a Smile" Back to School Day took place</p>
          <div class="btn"></div>
        </div>
      </div>
      <div class="card-deck">
          <div class="card">
            <img class="card-img-top" src="http://via.placeholder.com/300x188" alt="Card image cap">
            <div class="card-body">
              <h4 class="card-title">Card title</h4>
              <p class="card-text">This is a longer card with supporting text below as a natural lead-in to additional content. This content is a little bit longer.</p>
              <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
            </div>
          </div>
          <div class="card">
            <img class="card-img-top" src="http://via.placeholder.com/300x188" alt="Card image cap">
            <div class="card-body">
              <h4 class="card-title">Card title</h4>
              <p class="card-text">This card has supporting text below as a natural lead-in to additional content.</p>
              <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
            </div>
          </div>
          <div class="card">
            <img class="card-img-top" src="http://via.placeholder.com/300x188" alt="Card image cap">
            <div class="card-body">
              <h4 class="card-title">Card title</h4>
              <p class="card-text">This is a wider card with supporting text below as a natural lead-in to additional content. This card has even longer content than the first to show that equal height action.</p>
              <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
  {.section pagination}
    {.if prevPage}
      <h1>I am the following pages</h1>
    {.or}
      <div class="row no-gutters">
        <div class="col-md-12 col-sm-12">
          <img src="https://static6.businessinsider.com/image/563bd36c9dd7cc19008c7b37-1190-625/a-large-order-of-mcdonalds-fries-costs-about-126-in-venezuela.jpg">
        </div>
      </div>
    {.end}
  {.end}
  <div class="row no-gutters">
    {.repeated section items}
      {.main-image?}
      <div class="col-md-4 col-sm-12">
        <div class="img-wrap">
          <img {@|image-meta} />
          <div class="hilight">
            <p>{title|truncate 80}</p>
          </div>
        </div>
      </div>
      {.or}
      <div class="col-md-4 col-sm-12">
        <div class="img-wrap">
          <img src="http://clipart-library.com/img/1791739.jpg" />
          <div class="hilight">
            <p>{title|truncate 80}</p>
          </div>
        </div>
      </div>
      {.end}
    {.end}
</div>

<!-- pagination -->
{.if pagination}
  <nav class="blog-list-pagination">

    <!-- newer page -->
    {.if pagination.prevPage}
      <a href="{pagination.prevPageUrl}">Newer</a>
    {.or}
      <a class="disabled">Newer</a>
    {.end}

    <!-- older page -->
    {.if pagination.nextPage}
      <a href="{pagination.nextPageUrl}">Older</a>
    {.or}
      <a class="disabled">Older</a>
    {.end}

  </nav>
{.end}
